@model IEnumerable<demo2.Models.Flower>

@{
    ViewData["Title"] = "Danh sách Hoa";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Thêm mới Hoa</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên Hoa</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th>Loại Hoa</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td><img src="@item.ImageUrl" width="100" /></td>
                <td>@item.Category.Name</td>
            </tr>
        }

    </tbody>
</table>
